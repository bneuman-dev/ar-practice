<div class="container">
 <!--  <h1>Welcome to Sinatra!</h1>
  <p>Hello, world!</p> -->
  <p>LISTS: </p>
  <p>Lists created by you: </p>
  <% @user.created_lists.each do |list| %>
    <p><a href="/lists/<%= list.id %>"><%= list.name %></a></p>
  <% end %>
  
  <p></p>
  
  <p>Read only lists: </p>
  <% @user.read_only_lists.each do |list| %>
    <p><a href="/lists/<%= list.id %>"><%= list.name %></a>   created_by: <%= list.creator.username %></p>
  <% end %>

  <p></p>

  <p>Lists for groups you belong to: </p>
  <% @user.groups.each do |group| %>
    <% group.lists.each do |list| %>
      <p><a href="/lists/<%= list.id %>"> <%= list.name %></a> via 
        <a href="/groups/<%= group.id %>"><%= group.username %></a> </p>
    <% end %>
  <% end %>

  <p></p>

  <p>Groups you belong to: </p>
  <% @user.groups.each do |group| %>
    <p><a href="/groups/<%= group.id %>"> <%= group.username %></a>
      <% if @user.admin_groups.include? group %> 
        ADMIN PRIVILEGES
      <% end %>
    </p>
  <% end %>

  <p></p><p></p>
  <p><a href="/users/<%= @user.id %>/tasks">View all tasks</a></p>
</div>


